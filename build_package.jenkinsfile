
def getBranchName() {
    return params.ref.replaceAll("refs/heads/", "")
}

pipeline {
    agent any
    tools {
        nodejs "nodejs"
    }
    parameters {
        string(name: 'ref', defaultValue: 'master', description: 'Who should I say hello to?')
    }
    stages {
        stage('Test Hook') {
            steps {
                String branch = getBranchName()
                echo "Will deploy test10 t ${params.ref} ${getBranchName()}"
                sh 'ls'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}